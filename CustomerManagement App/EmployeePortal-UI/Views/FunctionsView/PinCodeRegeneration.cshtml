@model SearchModel
@{
    ViewData["Title"] = "Pin Code Regeneration";
}

<br />
<div id="window" class="text-center">
    <br />
    <h2 style="font-size:22px;color:red;">Pin Code Regeneration</h2>
    <br />
    <form method="post" asp-controller="FunctionsPostActions"  asp-action="RegeneratePinCode">
        <input id="textBox" asp-for="@Model.CustomerName" placeholder="Enter Customer Name" />
        <input id="button" type="submit" placeholder="Regenerate Pin Code" />
    </form>
    <br />
    <b>@Html.ValidationMessageFor(model=>model.CustomerName,"",new{@class="text-danger"})</b>
    <br />
    <br />
    <br />
</div>

