@model UpdateCustomerEmailModel

@{
    ViewData["Title"] = "Update Customer Email";
}

<br />
<div id="window" class="text-center">
    <br />
    <h2 style="font-size:22px;color:red;">Update Phone Number</h2>
    <br />
    <br />
    <form method="post" asp-controller="CustomerPostActions" asp-action="UpdateCustomerEmail">
        <input id="updateBox" asp-for="@Model.CustomerName" placeholder="Enter Customer Name" />
        <br />
        <b>@Html.ValidationMessageFor(model=>model.CustomerName,"", new{@class="text-danger"})</b>
        <br />
        <input id="updateBox" asp-for="@Model.CustomerEmail" placeholder="Enter New Customer Email" />
        <br />
        <b>@Html.ValidationMessageFor(model=>model.CustomerEmail,"", new{@class="text-danger"})</b>
        <br />
        <input id="button" type="submit" placeholder="Update Email" />
    </form>
    <br />
    <br />

</div>
<br />
