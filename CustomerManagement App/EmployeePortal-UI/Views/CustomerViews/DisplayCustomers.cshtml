@model InsertCustomerModel
@{
    ViewData["Title"] = "Display Customers";
}

<br />
<div id="window">
  <br />
  <table style="border:solid;border-color:dodgerblue;margin-left:auto;margin-right:auto">
    <thead>
      <tr id="tableHead">
                <td id="tableCell"> Customer Name </td>
                <td id="tableCell"> Customer Email </td>
                <td id="tableCell"> Customer Phone Number </td>
      </tr>
    </thead>
    <tr style="color:red;text-align:center;font-size:24px">
            <td id="tableCell"> @Model.CustomerName </td>
            <td id="tableCell"> @Model.CustomerEmail </td>
            <td id="tableCell"> @Model.CustomerPhoneNumber </td>
    </tr>
  </table>
  <br />
  <br />
  <br />
  <br />
  <a id="button" asp-action="CustomerManagementIndex" asp-controller="CustomerViews"> Customer Management </a>
  <br />
  <br />
  <br />
</div>
<br />